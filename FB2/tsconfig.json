{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "."
    }
}